# Database Configuration
DATABASE_URL=postgresql://transcriptai:transcriptai123@localhost:5432/transcriptai

# Application Configuration
APP_NAME=TranscriptAI
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/transcriptai.log

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Contact Center TranscriptAI

# CORS Configuration (for future frontend)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Upload Configuration
# Maximum file size in bytes (10 GB = 10737418240 bytes)
# Can be set as integer (bytes) or string like "200MB", "500MB", "1GB", "10GB", etc.
MAX_FILE_SIZE=10737418240
UPLOAD_DIR=audio_uploads

# Live Dictation Features
TRANSCRIPTAI_ENABLE_TRANSCRIPTION=1
TRANSCRIPTAI_LIVE_TRANSCRIPTION=1
TRANSCRIPTAI_LIVE_MIC=1
TRANSCRIPTAI_LIVE_BATCH_ONLY=1

