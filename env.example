# Database Configuration
DATABASE_URL=postgresql://signalhub:signalhub123@localhost:5432/signalhub

# Application Configuration
APP_NAME=SignalHub
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/signalhub.log

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Contact Center SignalHub

# CORS Configuration (for future frontend)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Upload Configuration
# Maximum file size in bytes (10 GB = 10737418240 bytes)
# Can be set as integer (bytes) or string like "200MB", "500MB", "1GB", "10GB", etc.
MAX_FILE_SIZE=10737418240
UPLOAD_DIR=audio_uploads

# Live Dictation Features
SIGNALHUB_ENABLE_TRANSCRIPTION=1
SIGNALHUB_LIVE_TRANSCRIPTION=1
SIGNALHUB_LIVE_MIC=1
SIGNALHUB_LIVE_BATCH_ONLY=1

# MLX Backend Configuration (Apple Silicon only)
# Enables MLX-accelerated Whisper transcription (3.25x faster than PyTorch)
# Values: 1 = Use MLX (if available), 0 = Use PyTorch (default), unset = Use PyTorch
# SIGNALHUB_USE_MLX=1
